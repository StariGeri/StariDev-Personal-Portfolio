---
/**
 * @name Footer
 * @description Footer for the site, used in Layout
 */
import Logo from "./Logo.astro";
import Button from "./Button.astro";
---

<footer>
  <div class="footerWrapper">
    <div class="logoWrapper">
      <Logo />
    </div>
    <div class="contentWrapper">
      <h2 class="footerText">Have an idea? Wanna work together?</h2>
      <div class="buttonContainer">
        <Button text="Let's Talk ðŸ‘‹" url="/contact" />
      </div>
    </div>
    <div class="separatorLine"></div>
    <div class="bottomText">
      <p>Designed and developed by StariGeri.</p>
      <p>Â© All rights reserved by Gergo Starosta</p>
    </div>
  </div>
</footer>

<style>
  footer {
    color: #fff;
    background: linear-gradient(180deg, var(--bgColor2), var(--bgColor));
    border-radius: 100px 100px 0 0;
    padding: 2rem 0;
    height: fit-content;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    min-height: 50vh;
    width: 100%;
    font-family: var(--text);
    position: relative;
    z-index: 5;
    margin-top: 30px;
  }
  .footerWrapper {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 80%;
    border-radius: 5px;
    max-width: 1200px;
    margin: 0 auto;
  }
  .logoWrapper {
    display: flex;
    justify-content: center;
    margin: 30px auto;
  }
  .contentWrapper {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin: 30px auto;
  }
  .footerText {
    font-size: 2rem;
    width: fit-content;
    font-weight: 500;
    margin: 0;
    text-align: center;
    font-family: var(--title);
  }
  .buttonContainer {
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: var(--text);
    margin: 30px 0 0 0;
  }
  .separatorLine {
    width: 100%;
    height: 1px;
    background: var(--primaryColor);
    margin: 30px 0 10px 0;
  }
  .bottomText {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 0.8rem;
    margin: 10px 0;
  }
  .bottomText p {
    margin: 10px 0;
    font-family: var(--text);
    font-size: 14px;
  }
</style>

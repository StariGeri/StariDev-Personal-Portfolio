---
/**
 * @name Navbar
 * @description Navbar component
 */
import Logo from "./Logo.astro";

export interface NavbarProps {
  activePage: string;
}

const { activePage } = Astro.props;
---

<!---NAVBAR--->
<nav class="navbar py-0 px-10 md:px-14 lg:px-24">
  <div class="logo__wrapper">
    <Logo />
  </div>
  <input type="checkbox" id="active" />
  <label for="active" class="menu__btn">
    <div class="hamburger">
      <span class="line long"></span>
      <span class="line short"></span>
    </div>
  </label>
  <div class="wrapper">
    <div class="menu__content">
      <ul class="menu">
        <li class="list__item">
          <a class={activePage == "Home" ? "activePage" : ""} href="/">Home.</a>
        </li>
        <li class="list__item">
          <a
            class={activePage == "Projects" ? "activePage" : ""}
            href="/projects">Projects.</a
          >
        </li>
        <li class="list__item">
          <a class={activePage == "Resume" ? "activePage" : ""} href="/resume"
            >Resume.</a
          >
        </li>
        <li class="list__item">
          <a class={activePage == "Contact" ? "activePage" : ""} href="/contact"
            >Contact.</a
          >
        </li>
      </ul>
      <div class="seperator__line"></div>
      <div class="right__column">
        <h3 class="connect__subtitle">
          I'm just a click away. <br />Let's Connect!
        </h3>
        <div class="social__container">
          <a
            class="social__link"
            data-tool-tip="Instagram"
            href="https://www.instagram.com/starigeri/"
            target="_blank">IG</a
          >
          <a
            class="social__link"
            data-tool-tip="GitHub"
            href="https://github.com/StariGeri"
            target="_blank">GH</a
          >
          <a
            class="social__link"
            data-tool-tip="LinkedIn"
            href="https://www.linkedin.com/in/gergo-starosta/"
            target="_blank">LD</a
          >
          <a
            href="https://mail.google.com/mail/u/1/#inbox?compose=CllgCJfmrTFjwqlKSjggJlgrfzqkdxQSrpWfjHXxxQJGsLBLbPxTtPKPZBDvxQqdfFHfFhCMkHL"
            class="social__link"
            data-tool-tip="starigeri.dev@gmail.com"
            target="_blank">EM</a
          >
        </div>
      </div>
    </div>
  </div>
</nav>

<style>
  /* Navbar Styles */
  .navbar {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 5rem;
    z-index: 10;
    display: flex;
    align-items: center;
    justify-content: center;
    justify-content: space-between;
    transition: all 300ms ease;
  }
  .wrapper {
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: fixed;
    top: 0;
    left: 0;
    height: 100vh;
    width: 100vw;
    background: linear-gradient(-130deg, var(--bgColor2), var(--bgColor));
    clip-path: circle(0.5px at calc(100% - 45px) 45px);
    transition: all 0.5s ease-in-out;
  }
  .menu__content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 100%;
    width: 100%;
    max-width: 1000px;
    margin: 0 auto;
    color: var(--bgColor);
    user-select: none;
  }
  .menu {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 50%;
    position: relative;
    z-index: 2;
    list-style: none;
    text-align: center;
  }
  .right__column {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 50%;
  }
  .connect__subtitle {
    font-size: 2rem;
    font-weight: 500;
    color: var(--lightColor);
    font-family: var(--text);
    text-align: center;
  }
  .social__container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 1rem;
  }
  .social__link[data-tool-tip] {
    font-size: 2.5rem;
    position: relative;
    font-weight: 500;
    color: var(--secondaryColor);
    font-family: var(--text2);
    text-decoration: none;
    transition: all 0.5s ease;
    cursor: pointer;
    margin: 10px;
    user-select: none;
  }
  .social__link[data-tool-tip]::after {
    content: attr(data-tool-tip);
    font-family: var(--text);
    position: absolute;
    display: block;
    margin-top: 20px;
    background-color: var(--secondaryColor);
    padding: 8px 14px;
    color: var(--lightColor);
    border-radius: 5px;
    font-size: 1.5rem;
    top: 0;
    left: 0;
    white-space: nowrap;
    transform: scale(0);
    transition: transform ease-out 0.3s, top ease-out 0.3s;
  }
  .social__link[data-tool-tip]:hover::after {
    transform: scale(1);
    top: 100%;
  }
  .social__link:hover {
    color: var(--lightColor);
    transition: all 0.5s ease;
  }
  .writeSection {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin-top: 7%;
  }
  #active:checked ~ .wrapper {
    clip-path: circle(75%);
  }
  .logo-wrapper {
    position: relative;
    z-index: 10;
  }
  #active:checked ~ .logo-wrapper .logo {
    color: var(--primaryColor);
  }
  .menu__btn {
    z-index: 2;
    text-align: center;
    line-height: 50px;
    border-radius: 50%;
    font-size: 20px;
    color: var(--lightColor);
    cursor: pointer;
    transition: all 0.3s ease-in-out;
  }
  .hamburger {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    z-index: 2;
    cursor: pointer;
    transition: all 0.3s ease-in-out;
  }
  .line {
    display: flex;
    width: 2rem;
    height: 0.25rem;
    background-color: var(--lightColor);
    border-radius: 10%;
    margin: 0.3rem;
    transition: all 0.3s ease-in-out;
  }
  .short {
    width: 1.5rem;
    text-align: right;
    float: right;
  }
  #active:checked ~ .menu__btn .hamburger .long {
    transform: rotate(45deg) translate(4px, 3px);
  }
  #active:checked ~ .menu__btn .hamburger .short {
    width: 2rem;
    transform: rotate(-45deg) translate(6px, -6px);
  }
  .wrapper ul li {
    margin: 15px 0;
  }
  .wrapper ul li a {
    color: var(--lightColor);
    text-decoration: none;
    position: relative;
    font-family: var(--text);
    font-size: 4rem;
    font-weight: 500;
    line-height: 50px;
    transition: all 0.3s ease;
  }
  .wrapper ul li a::after {
    content: "";
    position: absolute;
    z-index: -1;
    left: 0;
    bottom: 0;
    right: 0;
    width: 0%;
    height: 80%;
    border-radius: 10px;
    background-color: var(--secondaryColor);
    transition: 0.5s;
  }
  .wrapper ul li a:hover::after {
    width: 100%;
    opacity: 100%;
  }
  input[type="checkbox"] {
    display: none;
  }

  .seperator__line {
    width: 5px;
    height: 80%;
    max-height: 500px;
    border-radius: 20%;
    background-color: var(--primaryColor);
    opacity: 0.5;
  }

  /*Scrolling*/
  .scroll-down {
    display: none;
    transform: translate3d(0, -100%, 0);
    background-color: none;
    transition: all 0.3s ease;
  }
  .scroll-up {
    display: flex;
    transition: all 0.3s ease;
    filter: drop-shadow(0 -10px 20px rgba(0, 0, 0, 0.2));
    background-color: var(--bgColor);
  }
  @media screen and (max-width: 768px) {
    .menu__content {
      flex-direction: column;
      justify-content: center;
      gap: 50px;
    }
    .seperator__line {
      height: 4px;
      width: 70%;
      border-radius: 10%;
    }
    .right__column {
      width: 100%;
    }
    .social__link[data-tool-tip] {
      font-size: 2rem;
    }
    .wrapper ul li {
      margin: 10px 0;
    }
    .wrapper ul li a {
      font-size: 3rem;
    }
    .connect__subtitle {
      font-size: 1.5rem;
    }
    .social__link[data-tool-tip]::after {
      display: none;
    }
  }
  @media screen and (max-width: 500px) {
    .menu__content {
      gap: 30px;
    }
    .wrapper ul li {
      margin: 5px 0;
    }
    .wrapper ul li a {
      font-size: 2.5rem;
    }
    .social__link[data-tool-tip] {
      font-size: 1.7rem;
    }
  }
</style>

<script>
  //Scrolling
  const navbar = document.querySelector("nav") as HTMLElement;
  const checkbox = document.querySelector("#active") as HTMLInputElement;
  let lastScroll = 0;

  window.addEventListener("scroll", () => {
    const currentScroll = window.pageYOffset;
    if (currentScroll <= 0) {
      navbar.classList.remove("scroll-up");
    }
    if (
      currentScroll > lastScroll &&
      !navbar.classList.contains("scroll-down")
    ) {
      navbar.classList.remove("scroll-up");
      navbar.classList.add("scroll-down");
    }

    if (
      currentScroll < lastScroll &&
      navbar.classList.contains("scroll-down")
    ) {
      navbar.classList.remove("scroll-down");
      navbar.classList.add("scroll-up");
    }
    if(checkbox.checked && currentScroll > 0){
      checkbox.checked = false;
    }
    lastScroll = currentScroll;
  });
</script>

---
import Layout from "../layouts/Layout.astro";
import Blob from "../components/Blob.astro";
import Navbar from "../components/Navbar.astro";
---

<Layout title="Home | StariGeri.dev">
  <Navbar activePage="Home" />
  <Blob />
  <section class="hero-section">
    <div class="hero__contentWrapper">
      <h1>Hey!<br>I'm <span class="text-gradient">StariGeri</span>.</h1>
      <h2 class="hero-text">
        a Computer Science Student, who lives where Design meets Engineering. I'm eager to create web experiences that not just functional, but look dope.
      </h2>
    </div>
  </section>
</Layout>

<style>
  h1 {
    font-size: 4rem;
    font-weight: 800;
    margin: 0;
    color: var(--primaryColor);
    font-family: var(--title);
    max-width: 1000px;
    text-align: left;
  }
  .hero-text {
    font-size: 1.5rem;
    font-family: var(--text);
    font-weight: 400;
    margin: 0;
    color: var(--secondaryColor);
    text-align: left;
    width: 100%;
    max-width: 800px;
  }
  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 300%;
    background-position: 0%;
  }
  .hero-section {
    width: 100%;
    height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-color: var(--bgColor);
  }
  .hero__contentWrapper{
    display: flex;
    flex-direction: column;
    height: fit-content;
    width: 100%;
    max-width: 1200px;
  }
</style>
